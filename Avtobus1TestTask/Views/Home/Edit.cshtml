@{
    ViewData["Title"] = "Edit URL";
}
@model Avtobus1TestTask.Models.URL_Statistics;


<form asp-action="Edit" asp-controller="Home" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ShortURL" />
    <input type="hidden" asp-for="DateCreation" />
    <input type="hidden" asp-for="NumberTransitions" />
    <div class="mb-3">
        <label asp-for="LongURL" class="form-label">Long URL</label>
        <input asp-for="LongURL" type="url" class="form-control" id="LongURL" aria-describedby="URLlHelp">
        <span asp-validation-for="LongURL" class="text-danger"></span>
        <br />
        <p>Short URL: <a href="/@Model.ShortURL">@Context.Request.Host/@Model.ShortURL</a></p>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<br />
<div>
    <a asp-action="Index">Back to Home</a>
</div>

